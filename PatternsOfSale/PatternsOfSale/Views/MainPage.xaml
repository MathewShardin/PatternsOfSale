<!--<?xml version="1.0" encoding="utf-8" ?>-->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PatternsOfSale.MainPage">

    <Grid BackgroundColor="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Button Text="Start" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" BackgroundColor="White"/>
        <Button Text="Stop" Grid.Column="2" Grid.Row="0" BackgroundColor="White"/>
        <Frame BackgroundColor="White" Grid.Column="3" Grid.Row="0" Padding="0">
            <Label Text="Time: mm:ss" TextColor="Black" HorizontalOptions="Center" VerticalOptions="Center"/>
        </Frame>
        <Frame BackgroundColor="White" Grid.Column=" 4" Grid.Row="0" Grid.ColumnSpan="2" Padding="0">
            <Label Text="Score: 99999" TextColor="Black" HorizontalOptions="Center" VerticalOptions="Center"/>
        </Frame>
        <Label Text="Next Order:" Grid.Column="1" Grid.Row="1"/>
        <Label Text="You picked:" Grid.Column="1" Grid.Row="2"/>
        <Grid Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="4" Grid.RowSpan="2" Background="Gray">
            
        </Grid>
        <Button Text="Submit" Grid.Column="1" Grid.Row="5" BackgroundColor="White"/>
    </Grid>

</ContentPage>
